@page
@model SmukToolsApp.Pages.Events.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="container">

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Project.id)
        </dd>
        <dt class="col-sm-2">
            Event Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.title)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.StartDate)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EndDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Event.id" />
        <input type="submit" value="Delete" class="btn-sm btn btn-outline-danger" /> 
        <a asp-page="./Index" class="btn-sm btn btn-outline-primary">Back to List</a>
    </form>
</div>
</div>