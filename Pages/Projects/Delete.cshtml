@page
@model SmukToolsApp.Pages.Projects.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Project?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Project Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.title)
        </dd>
        <dt class="col-sm-2">
            Is Complete?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.iscomplete)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Project.id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" /> 
        <a asp-page="./Index" class="btn-sm btn btn-outline-primary">Back to List</a>
    </form>
</div>
